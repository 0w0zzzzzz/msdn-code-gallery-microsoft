<Window x:Class="WPF_TwoWnds.CustomMsgBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomMsgBox" Height="300" Width="300">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF37091D" Offset="0" />
            <GradientStop Color="#FF19030C" Offset="1" />
        </LinearGradientBrush>
    </Window.Background>
    
    <Grid Margin="0,0,28,74">
        <StackPanel Margin="10">
            <TextBlock Text="The Customer has confirmed" FontSize="25" Foreground="White"  TextWrapping="Wrap" Margin="20"/>
            <Button x:Name="Ok" Content="Ok" Margin="10" Width="100" FontSize="25" Click="Ok_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
