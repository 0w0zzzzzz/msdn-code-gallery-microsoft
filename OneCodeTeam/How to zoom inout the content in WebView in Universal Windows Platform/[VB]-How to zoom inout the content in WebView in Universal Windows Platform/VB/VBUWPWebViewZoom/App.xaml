<Application
    x:Class="VBUWPWebViewZoom.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VBUWPWebViewZoom"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <x:String x:Key="AppHeader">Universal Windows Code Samples by All-In-One Code Framework</x:String>
            <x:String x:Key="AppName">Universal Windows app: WebView Zoom</x:String>
            <x:String x:Key="AppSubtitle">
                This sample demonstrates how to resize the content of the WebView in Universal Windows Platform.
            </x:String>
            <x:String x:Key="AppDescription">
            </x:String>

            <Style x:Key="AppHeaderStyle" TargetType="TextBlock" BasedOn="{StaticResource CaptionTextBlockStyle}">
                <Setter Property="TextWrapping" Value="Wrap"></Setter>
            </Style>

            <Style x:Key="AppTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource HeaderTextBlockStyle}">
                <Setter Property="TextWrapping" Value="Wrap"></Setter>
                <Setter Property="Margin" Value="0,5,0,5"></Setter>
            </Style>

            <Style x:Key="AppSubtitleStyle" TargetType="TextBlock" BasedOn="{StaticResource SubheaderTextBlockStyle}">
                <Setter Property="TextWrapping" Value="Wrap"></Setter>
                <Setter Property="Margin" Value="0,5,0,5"></Setter>
            </Style>
            <Style x:Key="AppDescriptionStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyTextBlockStyle}">

            </Style>

            <Style x:Key="AppBodyTextStyle" TargetType="TextBlock" BasedOn="{StaticResource BodyTextBlockStyle}">
                <Setter Property="TextWrapping" Value="Wrap"></Setter>
            </Style>

            <Style x:Key="AppFooterStyle" TargetType="TextBlock" BasedOn="{StaticResource CaptionTextBlockStyle}">
                <Setter Property="TextWrapping" Value="Wrap"></Setter>
                <Setter Property="Foreground" Value="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
